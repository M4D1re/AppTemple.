<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTitleMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главная"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/settings_icon"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="right|center"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbarMain"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMain">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <ImageButton
                android:id="@+id/announceLeftButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="87.5dp"
                android:layout_marginStart="5dp"
                android:src="@mipmap/announcebuttonleft"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/announceRightButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="87.5dp"
                android:src="@mipmap/announcebuttonright"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>
        </com.denzcoskun.imageslider.ImageSlider>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>